{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start QEMU",
      "type": "shell",
      "command": "make",
      "args": [
        "qemu-debug"
      ],
      "dependsOn": [],
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".*",
              "file": 1,
              "line": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*",
            "endsPattern": ".*qemu-system-riscv64.*",
          }
        }
      ]
    }
  ]
}